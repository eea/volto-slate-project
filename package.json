{
  "name": "volto-starter-kit",
  "description": "Volto Starter Kit",
  "license": "MIT",
  "version": "4.0.0",
  "private": true,
  "workspaces": [
    "src/addons/volto-slate"
  ],
  "addons": [
    "volto-slate"
  ],
  "scripts": {
    "develop:npx": "npx -p mrs-developer missdev --config=jsconfig.json --output=addons",
    "develop": "missdev --config=jsconfig.json --output=addons",
    "preinstall": "if [ -f $(pwd)/node_modules/.bin/missdev ]; then yarn develop; else yarn develop:npx; fi",
    "start": "razzle start",
    "postinstall": "yarn omelette",
    "omelette": "ln -sf node_modules/@plone/volto/ omelette",
    "build": "razzle build",
    "test": "razzle test --env=jsdom",
    "test-addon": "jest --env=jsdom src/addons/volto-slate",
    "start:prod": "NODE_ENV=production node build/server.js",
    "i18n": "NODE_ENV=production node node_modules/@plone/volto/src/i18n.js",
    "code-analysis:i18n": "yarn i18n && git diff -G'^[^\"POT]' --exit-code",
    "pretty": "yarn prettier:fix",
    "prettier": "./node_modules/.bin/prettier --single-quote --check 'src/**/*.{js,jsx,ts,tsx,json,css,scss,md}'",
    "prettier:fix": "./node_modules/.bin/prettier --single-quote --write 'src/**/*.{js,jsx,ts,tsx,json,css,scss,md}'",
    "stylelint": "./node_modules/.bin/stylelint 'theme/**/*.{css,less}' 'src/**/*.{css,less}'",
    "stylelint:overrides": "./node_modules/.bin/stylelint --syntax less 'theme/**/*.overrides' 'src/**/*.overrides'",
    "stylelint:fix": "yarn stylelint --fix && yarn stylelint:overrides --fix",
    "lint": "./node_modules/eslint/bin/eslint.js --max-warnings=0 'src/**/*.{js,jsx}'",
    "lint:fix": "./node_modules/eslint/bin/eslint.js --fix 'src/**/*.{js,jsx}'",
    "style": "yarn stylelint:fix",
    "cypress:run:local": "NODE_ENV=development CYPRESS_API=plone CYPRESS_RETRIES=2 cypress open",
    "cypress:run": "docker run --link webapp:webapp --link plone:plone --name cypress -v $(./get_correct_pwd.sh):/e2e -w /e2e  -e NODE_ENV=development -e CYPRESS_API=plone -e CYPRESS_RETRIES=2 -e CI=yes -e CYPRESS_BASE_URL=http://webapp:3000 -e CYPRESS_BACKEND_HOST=plone -e CYPRESS_BACKEND_PORT=55001 -e CYPRESS_BACKEND_URL=http://plone:55001/plone --rm cypress/included:4.8.0",
    "ci:cypress:end": "docker stop webapp plone",
    "ci:start-api-plone": "docker run --name plone --rm -p 55001:55001 -e ZSERVER_PORT=55001  -e ZSERVER_HOST=0.0.0.0  -e ADDONS='plone.app.robotframework plone.app.contenttypes plone.restapi kitconcept.volto' -e CONFIGURE_PACKAGES=plone.app.contenttypes,plone.restapi,kitconcept.volto,kitconcept.volto.cors -e APPLY_PROFILES=plone.app.contenttypes:plone-content,plone.restapi:default,kitconcept.volto:default-homepage  -e VERSIONS='plone.restapi=6.13.4' -e ZCML='kitconcept.volto.cors' -e CORS_ALLOW_ORIGIN='http://webapp:3000' -e SITE=plone -e PROFILES='plone.app.contenttypes:plone-content plone.restapi:default kitconcept.volto:default-homepage' plone ./bin/robot-server plone.app.robotframework.testing.PLONE_ROBOT_TESTING",
    "ci:start-frontend": "docker run --link plone:plone --name webapp -e RAZZLE_API_PATH=http://plone:55001/plone -v $(./get_correct_pwd.sh):/$(pwd) -w /$(pwd) -p 3000:3000 --rm node:12-slim /bin/sh -c 'yarn build && yarn start:prod'",
    "ci:start-tests": "start-test ci:start-frontend http-get://localhost:3000 cypress:run",
    "ci:cypress:run": "start-test ci:start-api-plone http-get://localhost:55001/plone ci:start-tests",
    "ci:cypress:mochawsome:merge": "mochawesome-merge  --reportDir cypress/mochawesome/json -o cypress/mochawesome/mochawesome.json",
    "ci:cypress:mochawsome:report": "marge --reportDir=cypress/report --charts=true --reportTitle=ITReport --reportPageTitle='Cypress Integration Tests' cypress/mochawesome/mochawesome.json",
    "cy:test:fixture:setup": "node cypress/support/reset-fixture.js",
    "cy:test:fixture:teardown": "node cypress/support/reset-fixture.js teardown",
    "upgrade-volto": "yarn upgrade @plone/volto; cp node_modules/@plone/volto/yarn.lock yarn.lock; yarn install"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.overrides",
        "options": {
          "parser": "less"
        }
      }
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-idiomatic-order"
    ],
    "plugins": [
      "stylelint-prettier"
    ],
    "rules": {
      "prettier/prettier": true,
      "rule-empty-line-before": [
        "always-multi-line",
        {
          "except": [
            "first-nested"
          ],
          "ignore": [
            "after-comment"
          ]
        }
      ]
    },
    "ignoreFiles": "theme/themes/default/**/*.overrides"
  },
  "engines": {
    "node": "^10 || ^12"
  },
  "dependencies": {
    "@plone/volto": "plone/volto#load_addons_1531",
    "mrs-developer": "1.1.6",
    "resolve-url-loader": "3.1.1"
  },
  "devDependencies": {
    "cypress": "^4.8.0",
    "cypress-plugin-tab": "1.0.5",
    "eslint-plugin-prettier": "3.1.3",
    "isomorphic-style-loader": "5.1.0",
    "jest": "26.0.1",
    "jest-transform-stub": "2.0.0",
    "prettier": "2.0.5",
    "start-server-and-test": "1.10.6",
    "stylelint-config-idiomatic-order": "8.1.0",
    "stylelint-config-prettier": "8.0.1",
    "stylelint-prettier": "1.1.2",
    "xmlrpc": "1.3.2",
    "cypress-sonarqube-reporter": "^1.4.0",
    "jest-junit": "10.0.0",
    "cypress-multi-reporters": "^1.4.0",
    "mochawesome": "6.1.1",
    "mochawesome-merge": "4.1.0",
    "mochawesome-report-generator": "5.1.0",
    "mocha-junit-reporter": "2.0.0",
    "@cypress/code-coverage": "3.8.1",
    "babel-plugin-istanbul": "6.0.0",
    "nyc": "15.1.0",
    "babel-plugin-transform-class-properties": "6.24.1"  
  }
}
